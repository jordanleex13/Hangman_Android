<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.jordanleex13.hangman.FragmentOnePlayerGamePlay">

    <ImageView
        android:id="@+id/fragment_one_player_game_play_hangman_image"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:id="@+id/fragment_one_player_game_play_linear_layout"
        android:layout_above="@+id/fragment_one_player_game_play_alphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_margin="@dimen/medium_margin">

    </LinearLayout>

    <GridLayout
        android:id="@+id/fragment_one_player_game_play_alphabet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_above="@+id/fragment_one_player_game_play_give_up"
        android:layout_margin="@dimen/medium_margin"
        android:columnCount="9">

        <TextView
            android:text="A"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="B"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="C"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="D"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="E"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="4"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="F"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="5"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="G"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="6"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="H"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="7"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="I"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="0"
            android:layout_column="8"
            android:layout_margin="@dimen/small_margin"/>


        <!--NEW ROW-->

        <TextView
            android:text="J"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:text="K"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="L"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="M"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="N"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="4"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="O"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="5"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="P"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="6"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="Q"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="7"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="R"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="1"
            android:layout_column="8"
            android:layout_margin="@dimen/small_margin"/>

        <!--NEW ROW-->
        <TextView
            android:text="S"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="T"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="U"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="V"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="W"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="4"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="X"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="5"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="Y"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="6"
            android:layout_margin="@dimen/small_margin"/>
        <TextView
            android:text="Z"
            android:textColor="@color/black"
            android:textSize="@dimen/extra_large_text"
            android:fontFamily="sans-serif-light"
            android:layout_row="2"
            android:layout_column="7"
            android:layout_margin="@dimen/small_margin"/>

    </GridLayout>

    <Button
        android:id="@+id/fragment_one_player_game_play_give_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:text="Give Up"
        android:textSize="@dimen/medium_text"
        android:fontFamily="sans-serif-light"
        style="@android:style/ButtonBar"/>
</RelativeLayout>
